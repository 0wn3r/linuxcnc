# Include your customized HAL commands here
# The commands in this file are run after the GUI starts

sets spindle-at-speed true
#setp gscreen.led_spindle_fault true
#setp gscreen.led_fault true
#setp gscreen.led_aux true

#net spindle-cw gscreen.led_spindle_fwd
#net spindle-ccw gscreen.led_spindle_rev motion.spindle-reverse
#net spindle-cmd-rpm-abs gscreen.spindle-spd-disp

net tool-change gscreen.change-tool iocontrol.0.tool-change 
net tool-changed gscreen.tool-changed iocontrol.0.tool-changed
net tool-prep-number gscreen.tool-number iocontrol.0.tool-prep-number
net tool-prep-loop iocontrol.0.tool-prepare iocontrol.0.tool-prepared


net     mpg-counts  control_panel.mpg

net     mpg-scale-x     joint.0.jog-scale      axis.x.jog-scale
net     mpg-scale-y     joint.1.jog-scale      axis.y.jog-scale
net     mpg-scale-z     joint.2.jog-scale      axis.z.jog-scale

net     mpg-counts  joint.0.jog-counts      axis.x.jog-counts
net     mpg-counts  joint.1.jog-counts      axis.y.jog-counts
net     mpg-counts  joint.2.jog-counts      axis.z.jog-counts

net     select-x-out    gscreen.select-x-out    joint.0.jog-enable      axis.x.jog-enable
net     select-y-out    gscreen.select-y-out    joint.1.jog-enable      axis.y.jog-enable
net     select-z-out    gscreen.select-z-out    joint.2.jog-enable      axis.z.jog-enable

sets mpg-scale-x .010
sets mpg-scale-y .010
sets mpg-scale-z .010

net     select-x-in    gscreen.select-x-in    control_panel.select_x-button
net     select-x-out     control_panel.select_x-light
net     select-y-in    gscreen.select-y-in    control_panel.select_y-button
net     select-y-out     control_panel.select_y-light
net     select-z-in    gscreen.select-z-in    control_panel.select_z-button
net     select-z-out     control_panel.select_z-light

show pin control
show pin gscreen
